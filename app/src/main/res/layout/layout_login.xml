<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade"
    android:orientation="vertical"
    tools:context=".Login_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/itachi"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Insira o e-mail"
            android:textColor="#FFFF"
            android:textSize="30sp"></TextView>


        <EditText
            android:id="@+id/txtemaillogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/desenho"
            android:textsize="30sp"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Insira a senha"
            android:textColor="#FFFF"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtsenhalogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/desenho"
            android:textsize="30sp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caso nÃ£o tenha uma conta"
            android:textColor="#FFFF"
            android:textSize="20sp" />
            <TextView
                android:id="@+id/txtCadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" cadastre-se."
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>